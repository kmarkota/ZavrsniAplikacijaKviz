<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/big_vertical"

    tools:layout_editor_absoluteY="25dp">



        <TextView
            android:id="@+id/textDob"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="226dp"
            android:gravity="center"
            android:text="Godina rođenja :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textSpol"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="105dp"
            android:gravity="center"
            android:text="Spol:"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textDob"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-1dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <RadioGroup
            android:id="@+id/Spol"
            android:layout_width="231dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/textSpol"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioM"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:checked="true"
                android:text="M"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioZ"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="85dp"
                android:text="Ž"
                android:textSize="18sp" />


        </RadioGroup>

        <TextView
            android:id="@+id/obrazovanje"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_above="@+id/textDob"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-194dp"
            android:gravity="center"
            android:text="Stručna sprema :"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textDob"
            android:layout_marginEnd="107dp"
            android:gravity="center"
            android:text="god."
            android:textSize="18sp" />

        <EditText
            android:id="@+id/obrazovanjeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/obrazovanje"
            android:layout_marginEnd="19dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />



    <Button
        android:id="@+id/dalje"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="157dp"
        android:layout_marginEnd="39dp"
        android:gravity="center"
        android:text="Dalje" />




</RelativeLayout>