<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/big_vertical"
    >

    <TextView
        android:id="@+id/pitanje"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/odgovor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/odgovor2"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Uopće se ne slažem"
        android:textSize="14sp" />

    <Button
        android:id="@+id/odgovor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/odgovor3"
        android:layout_alignParentStart="true"
        android:gravity="center"

        android:textSize="14sp" />

    <Button
        android:id="@+id/odgovor3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/odgovor4"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Ne znam"
        android:textSize="14sp" />

    <Button
        android:id="@+id/odgovor4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Slažem se"
        android:textSize="14sp" />

    <Button
        android:id="@+id/odgovor5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/odgovor4"
        android:gravity="center"
        android:text="U potpunosti se slažem"
        android:textSize="14sp" />


</LinearLayout>